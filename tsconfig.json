{
"compilerOptions": {
  "target": "ES2020",
  "module": "CommonJS",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["/*"],  
      "@/types/*": ["types/*"], 
      "@/models/*": ["models/*"],  
      "@/resolvers/*": ["resolvers/*"],  
      "@/schema/*": ["schema/*"],  
      "@/services/*": ["services/*"],  
      "@/middlewares/*": ["middlewares/*"],  
    },
    "outDir": "./dist",
    "rootDir": "./src",

     "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
